;stress
(rule
  (targets dl-stress)
  (deps (:bin ../src/bin/http_of_dir.exe) ./store files/foo_50k stress.sh)
  (locks /port)
  (package simple_httpd)
  (enabled_if (= %{system} "linux"))
  (action (with-stdout-to %{targets}
                          (run ./stress.sh %{bin} 15 HTTP))))

(rule
  (alias runtest)
  (package simple_httpd)
  (enabled_if (= %{system} "linux"))
  (action (diff dl-stress.expect dl-stress)))

