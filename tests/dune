;echo

(rule
  (targets echo1.out)
  (deps (:bin ../examples/echo.exe) echo1.sh ../examples/store)
  (locks /port)
  (enabled_if (= %{system} "linux"))
  (package simple_httpd)
  (action (with-stdout-to %{targets} (run ./echo1.sh %{bin}))))

(rule
  (alias runtest)
  (package simple_httpd)
  (enabled_if (= %{system} "linux"))
  (action (diff echo1.expect echo1.out)))

