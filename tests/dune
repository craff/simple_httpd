;chunked

(rule
  (targets chunked-out)
  (deps (:bin ../src/bin/http_of_dir.exe) ./store files/foo_50k chunked.sh)
  (locks /port)
  (package simple_httpd)
  (enabled_if (= %{system} "linux"))
  (action (with-stdout-to chunked-out
                          (run ./chunked.sh %{bin} HTTP))))

(rule
  (alias runtest)
  (package simple_httpd)
  (enabled_if (= %{system} "linux"))
  (action (diff chunked-out.expect chunked-out)))

